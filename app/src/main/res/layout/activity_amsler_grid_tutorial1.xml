<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="107dp"
        android:layout_height="121dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Amsler Grid Test"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.049" />

    <!-- Speaker Button -->
    <ImageButton
        android:id="@+id/speaker_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_speaker"
        android:contentDescription="Speaker"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button" />

    <!-- Tutorial Subtitle -->
    <TextView
        android:id="@+id/tutorial_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tutorial"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/speaker_button"
        app:layout_constraintTop_toTopOf="@id/back_button" />

    <!-- Tutorial Box -->
    <ScrollView
        android:id="@+id/tutorial_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/start_test_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tutorial_subtitle">

        <TextView
            android:id="@+id/tutorial_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the tutorial text. It will explain how to take the Amsler Grid Test. You can scroll through the text if you prefer to read it yourself." />

    </ScrollView>

    <!-- Start Test Button -->
    <Button
        android:id="@+id/start_test_button"
        style="@style/ButtonStyle"
        android:text="Start Test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scroll Up Button -->
    <ImageButton
        android:id="@+id/scroll_up_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_arrow_up"
        android:contentDescription="Scroll Up"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@id/start_test_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll Down Button -->
    <ImageButton
        android:id="@+id/scroll_down_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_arrow_down"
        android:contentDescription="Scroll Down"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@id/start_test_button"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
